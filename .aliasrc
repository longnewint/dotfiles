# System aliases
alias ls="lsd"
alias l="lsd -1"
alias la="lsd -1A"
alias ll="lsd -l"
alias lla="lsd -lA"
alias v="nvim"
alias fetch="fastfetch"
alias tm="tmux"
alias bt="btop"
alias du="dust"

# dnf
alias ud="sudo dnf check-update"
alias ug="sudo dnf upgrade -y"

# systemctl
alias sc="sudo systemctl"

# kde
alias khalt="qdbus org.kde.Shutdown /Shutdown logoutAndShutdown"
alias kboot="qdbus org.kde.Shutdown /Shutdown logoutAndReboot"
alias klout="qdbus org.kde.Shutdown /Shutdown logout"
alias ksl="qdbus org.kde.kglobalaccel /component/org_kde_powerdevil invokeShortcut 'Sleep'"
alias klk="qdbus org.kde.screensaver /ScreenSaver Lock"

# Development aliases
alias jdoc="chromium-browser /usr/share/javadoc/java/index.html"
alias g="git"
alias j="java"
alias vk="valkey-cli"

# Application
alias iv="qimgv"
alias sx="sxiv"

